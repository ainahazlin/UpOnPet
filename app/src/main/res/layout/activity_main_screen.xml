<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/offwhite"
    android:orientation="vertical"
    tools:context=".MainScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/buttonpethotel"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/greygreen"
                android:text="Are you admin of Pet Hotel? Click Here"
                android:textColor="@color/graybeige"
                android:fontFamily="@font/opensans_semibold"                android:layout_gravity="center"
                android:textSize="14sp"
                android:onClick="buttonforstaff"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="OR"
                    android:textStyle="bold"
                    android:paddingHorizontal="10dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/white" />

            </LinearLayout>


            <Button
                android:id="@+id/buttonclient"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp"
                android:backgroundTint="@color/greygreen"
                android:textSize="15sp"
                android:text="Are you a pet owner? Click Here"
                android:textColor="@color/graybeige"
                android:onClick="buttonforclient"
                android:fontFamily="@font/opensans_semibold"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
