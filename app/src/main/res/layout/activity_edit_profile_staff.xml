<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybeige"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_box">
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/iconnobg"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:text="Edit Pet Hotel"
                android:gravity="center"
                android:padding="8dp"
                />

            <EditText
                android:id="@+id/updatepethotelemail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"                android:ems="10"
                android:gravity="center"
                android:hint="Pet Hotel Email Address (abc@def.gh)"
                android:inputType="text" />


            <EditText
                android:id="@+id/updatenamepethotel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"                android:ems="10"
                android:gravity="center"
                android:hint="Pet Hotel Name"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:maxLines="5" />


            <EditText
                android:id="@+id/updateaddresspethotel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"                android:ems="10"
                android:gravity="center"
                android:hint="Pet Hotel Address"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:maxLines="5"/>


            <EditText
                android:id="@+id/updatecontactpethotel"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"                android:ems="10"
                android:gravity="center"
                android:hint="Pet Hotel Contact Number"
                android:inputType="text" />



            <Button
                android:id="@+id/buttoneditprofile"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/greygreen"
                android:text="Update"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/black"
                android:enabled="false"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
