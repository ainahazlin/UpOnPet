<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graybeige"
    android:orientation="vertical"
    tools:context=".EditClient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/rounded_box">
            <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/iconnobg"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:text="Edit Client"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:padding="8dp" />

                <Button
                    android:id="@+id/buttonDelete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:background="@drawable/baseline_logout_24"
                    android:visibility="gone"/>
                <Button
                    android:id="@+id/checkinback"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textColor="@android:color/white"
                    android:background="@drawable/baseline_logout_24"
                    android:rotation="180" />


            </RelativeLayout>

            <EditText
                android:id="@+id/updateclientname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"
                android:hint="Client Name"
                android:inputType="text" />


            <EditText
                android:id="@+id/updateclientcontacnumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"
                android:hint="Client Phone Number"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:maxLines="5" />


            <EditText
                android:id="@+id/updateclientaddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"
                android:ems="10"
                android:gravity="center"
                android:hint="Client Address"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:maxLines="5"/>

            <EditText
                android:id="@+id/itembrought"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"
                android:ems="10"
                android:gravity="center"
                android:hint="Client item brought"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:maxLines="5"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:id="@+id/paymentstatus"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/box_bg"
                android:ems="10"
                android:completionThreshold="1"
                android:gravity="center"
                android:hint="Payment Status"
                />


            <Button
                android:id="@+id/buttoneditclient"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/opensans_semibold"
                android:backgroundTint="@color/greygreen"
                android:visibility="gone"
                android:text="Update"/>


            <Button
                android:id="@+id/buttoneditpet"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:visibility="gone"
                android:backgroundTint="@color/greygreen"
                android:text="Edit Pet"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
